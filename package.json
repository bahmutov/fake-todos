{
  "name": "fake-todos",
  "description": "Generates a list of mock todos for TodoMVC apps ;)",
  "main": "src/index.js",
  "version": "0.0.0-semantic-release",
  "scripts": {
    "test": "mocha --harmony src/*-spec.js",
    "lint": "standard *.js src/*.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "issues": "git-issues",
    "commit": "commit-wizard",
    "build": "webpack",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/fake-todos.git"
  },
  "keywords": [
    "fake",
    "mock",
    "todo",
    "todos"
  ],
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bahmutov/fake-todos/issues"
  },
  "homepage": "https://github.com/bahmutov/fake-todos#readme",
  "devDependencies": {
    "console.table": "0.4.0",
    "git-issues": "1.2.0",
    "mocha": "2.3.4",
    "pre-git": "3.1.2",
    "semantic-release": "^4.3.5",
    "standard": "5.4.1",
    "webpack": "1.12.9"
  },
  "dependencies": {
    "check-more-types": "2.10.0",
    "lazy-ass": "1.3.0"
  },
  "files": [
    "dist",
    "src/*.js",
    "!src/*-spec.js"
  ],
  "config": {
    "pre-git": {
      "commit-msg": [
        "simple"
      ],
      "pre-commit": [
        "npm run lint",
        "npm run test"
      ],
      "pre-push": [
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  }
}
